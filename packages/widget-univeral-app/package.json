{
  "name": "@rnc/widget-univeral-app",
  "version": "0.0.18",
  "description": "通用应用",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf ./lib",
    "start": "npm run clean && gulp",
    "build": "npm run clean && babel ./src --out-dir ./lib"
  },
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "@babel/runtime": "7.0.0",
    "@rnc/git": "^0.0.16",
    "@rnc/plugin-compiler-webpack": "^0.0.11",
    "@rnc/plugin-config-app": "^0.0.4",
    "@rnc/plugin-env": "^0.0.6",
    "@rnc/plugin-find": "^0.0.8",
    "@rnc/plugin-git": "^0.0.16",
    "@rnc/plugin-npm": "^0.0.18",
    "@rnc/plugin-oss-upload": "^0.0.9",
    "@rnc/plugin-sequence": "^0.0.6",
    "@rnc/shell": "^0.0.18",
    "@rnc/logger": "^0.0.3",
    "chalk": "^2.4.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "rnc": {
    "commands": [
      {
        "name": "dev",
        "desc": "本地开发",
        "arguments": "[pagePath...]",
        "options": [],
        "action": "./lib/develop.js"
      },
      {
        "name": "build",
        "desc": "本地打包",
        "arguments": "[pagePath...]",
        "options": [],
        "action": "./lib/build.js"
      },
      {
        "name": "publish",
        "desc": "发布",
        "arguments": "[pagePath...]",
        "options": [],
        "action": "./lib/publish.js"
      },
      {
        "name": "upload",
        "desc": "上传",
        "arguments": "[pagePath...]",
        "options": [],
        "action": "./lib/upload.js"
      }
    ]
  }
}
